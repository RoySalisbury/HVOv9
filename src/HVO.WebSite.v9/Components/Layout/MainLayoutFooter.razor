<footer class="global-footer">
    <section class="global-footer__section global-footer__section--left">
        <span class="footer-chip footer-chip--info">
            <i class="bi bi-info-circle-fill me-2"></i>Section 1
        </span>
    </section>

    <section class="global-footer__section global-footer__section--center">
        <span class="footer-chip footer-chip--success">
            <i class="bi bi-check-circle-fill me-2"></i>Section 2
        </span>
    </section>

    <section class="global-footer__section global-footer__section--right">
        <span class="footer-chip footer-chip--info">
            <i class="bi bi-clock-history me-2"></i>@System.DateTimeOffset.Now.ToLocalTime().ToString("t")
        </span>
    </section>
</footer>
