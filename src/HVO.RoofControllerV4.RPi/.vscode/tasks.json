{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/HVO.RoofControllerV4.RPi.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "watch",
            "command": "dotnet",
            "type": "shell",
            "args": [
                "watch",
                "run",
                "--project",
                "${workspaceFolder}/HVO.RoofControllerV4.RPi.csproj"
            ],
            "problemMatcher": "$msCompile",
            "isBackground": true,
            "group": {
                "kind": "test",
                "isDefault": true
            }
        }
    ]
}
