<body data-theme="hvo-dark">
    <Routes />

    <div id="components-reconnect-modal">
        <div class="reconnect-dialog">
            <div class="components-reconnect-show reconnect-state reconnect-attempting" role="status" aria-live="polite">
                <div class="reconnect-icon reconnect-icon--attempting">
                    <i class="bi bi-arrow-repeat"></i>
                </div>
                <h3 class="reconnect-heading">Reconnectingâ€¦</h3>
                <p class="reconnect-copy">The observatory is not responding. Please wait while we attempt to reconnect.</p>
            </div>
            <div class="components-reconnect-failed reconnect-state reconnect-failed" role="alert" aria-live="assertive">
                <div class="reconnect-icon reconnect-icon--failed">
                    <i class="bi bi-wifi-off"></i>
                </div>
                <h3 class="reconnect-heading">Connection lost</h3>
                <p class="reconnect-copy">We couldn't reach the observatory. Check the network connection, then try reloading.</p>
                <div class="reconnect-actions">
                    <button class="btn btn-outline-light" type="button" onclick="location.reload()">Reload</button>
                </div>
            </div>
            <div class="components-reconnect-rejected reconnect-state reconnect-rejected" role="alert" aria-live="assertive">
                <div class="reconnect-icon reconnect-icon--rejected">
                    <i class="bi bi-shield-exclamation"></i>
                </div>
                <h3 class="reconnect-heading">Reconnection refused</h3>
                <p class="reconnect-copy">Another session is active or the server rejected the request. Reload to start a new session.</p>
                <div class="reconnect-actions">
                    <button class="btn btn-primary" type="button" onclick="location.reload()">Reload</button>
                </div>
            </div>
        </div>
    </div>

