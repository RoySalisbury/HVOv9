<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - HVO Playground</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/app.css" />
    <link rel="stylesheet" href="~/css/mvc-layout.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/HVO.WebSite.Playground.styles.css" asp-append-version="true" />
</head>
<body>
    <div class="page">
        <div class="sidebar">
            <div class="nav-menu">
                <div class="top-row ps-3 navbar navbar-dark">
                    <div class="container-fluid">
                        <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">HVO Playground</a>
                    </div>
                </div>
                <div class="nav-scrollable">
                    <nav class="nav flex-column">
                        <div class="nav-item px-3">
                            <a class="nav-link @(ViewContext.RouteData.Values["Action"]?.ToString() == "Index" ? "active" : "")" asp-area="" asp-controller="Home" asp-action="Index">
                                <span class="bi bi-house-door-fill-nav-menu" aria-hidden="true"></span> Home
                            </a>
                        </div>
                        <div class="nav-item px-3">
                            <a class="nav-link @(ViewContext.RouteData.Values["Action"]?.ToString() == "PingTest" ? "active" : "")" asp-area="" asp-controller="Home" asp-action="PingTest">
                                <span class="bi bi-wifi-nav-menu" aria-hidden="true"></span> Ping Test (MVC)
                            </a>
                        </div>
                        <div class="nav-item px-3">
                            <a class="nav-link" href="/ping-test">
                                <span class="bi bi-wifi-nav-menu" aria-hidden="true"></span> Ping Test (Blazor)
                            </a>
                        </div>
                    </nav>
                </div>
            </div>
        </div>

        <main>
            <div class="top-row">
                <a href="https://learn.microsoft.com/aspnet/core/" target="_blank">About</a>
            </div>

            <article class="content">
                @RenderBody()
            </article>
        </main>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
